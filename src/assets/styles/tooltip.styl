.tooltip {
  display: block !important;
  z-index: 3000;
  font-family: 'MuktaMalar', Helvetica, Arial, sans-serif;
  max-width: 300px;
}
.tooltip .tooltip-inner {
  background: #fff7e6;
  color: #1a0033;
  letter-spacing: 1.3px;
  font-weight: bold;
  line-height: 1.4;
  font-size: 12px;
  text-transform: uppercase;
  border-radius: 16px;
  padding: 8px 12px;
  -webkit-box-shadow: 0px 0px 32px -10px rgba(0,0,0,0.59);
  -moz-box-shadow: 0px 0px 32px -10px rgba(0,0,0,0.59);
  box-shadow: 0px 0px 32px -10px rgba(0,0,0,0.59);
}
.tooltip .tooltip-arrow {
  width: 0;
  height: 0;
  border-style: solid;
  position: absolute;
  margin: 5px;
  border-color: #fff7e6;
  z-index: 1;
  -webkit-box-shadow: 0px 0px 32px -10px rgba(0,0,0,0.59);
  -moz-box-shadow: 0px 0px 32px -10px rgba(0,0,0,0.59);
  box-shadow: 0px 0px 32px -10px rgba(0,0,0,0.59);
}
.tooltip[x-placement^="top"] {
  margin-bottom: 10px;
}
.tooltip[x-placement^="top"] .tooltip-arrow {
  border-width: 5px 5px 0 5px;
  border-left-color: transparent !important;
  border-right-color: transparent !important;
  border-bottom-color: transparent !important;
  bottom: -5px;
  left: calc(50% - 5px);
  margin-top: 0;
  margin-bottom: 0;
}
.tooltip[x-placement^="bottom"] {
  margin-top: 5px;
}
.tooltip[x-placement^="bottom"] .tooltip-arrow {
  border-width: 0 5px 5px 5px;
  border-left-color: transparent !important;
  border-right-color: transparent !important;
  border-top-color: transparent !important;
  top: -5px;
  left: calc(50% - 5px);
  margin-top: 0;
  margin-bottom: 0;
}
.tooltip[x-placement^="right"] {
  margin-left: 5px;
  left: -15px !important;
}
.tooltip[x-placement^="right"] .tooltip-arrow {
  border-width: 5px 5px 5px 0;
  border-left-color: transparent !important;
  border-top-color: transparent !important;
  border-bottom-color: transparent !important;
  left: -4px;
  top: calc(50% - 5px);
  margin-left: 0;
  margin-right: 0;
}
.tooltip[x-placement^="left"] {
  margin-right: 5px;
}
.tooltip[x-placement^="left"] .tooltip-arrow {
  border-width: 5px 0 5px 5px;
  border-top-color: transparent !important;
  border-right-color: transparent !important;
  border-bottom-color: transparent !important;
  right: -4px;
  top: calc(50% - 5px);
  margin-left: 0;
  margin-right: 0;
}
.tooltip[aria-hidden='true'] {
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.15s, visibility 0.15s;
}
.tooltip[aria-hidden='false'] {
  visibility: visible;
  opacity: 1;
  transition: opacity 0.15s;
}
.tooltip.info .tooltip-inner {
  background: rgba(0, 68, 153, .9);
  color: white;
  padding: 24px;
  border-radius: 5px;
  box-shadow: 0 5px 30px rgba(0, 0, 0, .1);
}
.tooltip.info .tooltip-arrow {
  border-color: rgba(0, 68, 153, .9);
}
.tooltip.popover .popover-inner {
  background: #f9f9f9;
  color: black;
  padding: 24px;
  border-radius: 5px;
  box-shadow: 0 5px 30px rgba(0, 0, 0, .1);
}
.tooltip.popover .popover-arrow {
  border-color: #f9f9f9;
}
.tipnormal .tooltip-inner {
  font-weight 300 !important
  font-size 14px
  text-transform none
}
